//////////////////////////////////////////////////////////////////////////////////
//                             Implement
//////////////////////////////////////////////////////////////////////////////////
float InFogEffect(float distToEye, float fogStart, float fogRange)
{
    float fogAmount = 0.0f;
    fogAmount       = saturate((distToEye - fogStart) / fogRange);
    
    return fogAmount;
}
#endif